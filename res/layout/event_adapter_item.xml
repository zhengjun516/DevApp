<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    >

    <RelativeLayout
        android:id="@+id/my_publish_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mAvatarImage"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="@dimen/size_48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10dp"
             android:layout_marginRight="@dimen/size_10dp"
            android:duplicateParentState="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/avatar_default"
             />

        <TextView
            android:id="@+id/mUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:text="姓名"
            android:textColor="@color/adapteritem_name_color"
            android:textSize="@dimen/text_size_14sp" 
            android:layout_toRightOf="@id/mAvatarImage"
            />
        <TextView
            android:id="@+id/mItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:text="07-14  19:30"
            android:textSize="@dimen/text_size_10sp" 
            android:layout_toRightOf="@id/mAvatarImage"
            android:layout_below="@id/mUserName"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:text="活动名称"
            android:textSize="@dimen/text_size_14sp" 
            />
        <TextView
            android:id="@+id/mEventAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:text="活动地点"
            android:textSize="@dimen/text_size_14sp" 
            />
         <TextView
            android:id="@+id/mEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:text="活动时间"
            android:textSize="@dimen/text_size_14sp" 
            />
        
    </LinearLayout>
</LinearLayout>